# PixelForge AI Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==============================================================================
# AI SERVICES
# ==============================================================================

# Google Gemini API Key (Required for AI naming and Instagram content)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================================================
# INSTAGRAM API WITH INSTAGRAM LOGIN (UPDATED POST-DEC 2024)
# ==============================================================================

# ⚠️ CRITICAL: Instagram Basic Display API deprecated Dec 4, 2024
# Now requires Instagram Business App + Instagram Graph API + Business/Creator accounts

# Instagram App Credentials (Required for Instagram Login)
# Get from: Instagram Developers Console > Your App > Settings > Basic
INSTAGRAM_CLIENT_ID=your_instagram_app_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret_here

# Instagram OAuth Redirect URI (Must match Instagram app settings exactly)
# For development: http://localhost:3001/api/instagram/auth/callback
# For production: https://yourdomain.com/api/instagram/auth/callback
INSTAGRAM_REDIRECT_URI=http://localhost:3001/api/instagram/auth/callback

# ==============================================================================
# INSTAGRAM API WITH FACEBOOK LOGIN (ALTERNATIVE OPTION)
# ==============================================================================

# Facebook App Credentials (Alternative - for Facebook Login approach)
# Get from: Facebook Developers Console > Your App > Settings > Basic
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Facebook Page ID (Required for Facebook Login approach)  
# Get from: Facebook Page > About > Page ID
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# ==============================================================================
# SERVICE CONFIGURATION
# ==============================================================================

# Backend server port
PORT=3001

# Frontend URL (for OAuth redirects and CORS)
FRONTEND_URL=http://localhost:3000

# Python service URL
PYTHON_SERVICE_URL=http://localhost:8001

# ==============================================================================
# FILE STORAGE
# ==============================================================================

# Upload and processing directories
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp

# File size limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_UPLOAD=20

# ==============================================================================
# DATABASE
# ==============================================================================

# Database configuration (currently JSON-based)
DATABASE_TYPE=json
DATABASE_PATH=./data/database.json

# ==============================================================================
# SECURITY
# ==============================================================================

# JWT secret for user authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Session configuration
SESSION_SECRET=your_session_secret_here

# ==============================================================================
# EMAIL SERVICE (Optional - for notifications)
# ==============================================================================

# Email service configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=true

# Python service debug mode
PYTHON_DEBUG=true
