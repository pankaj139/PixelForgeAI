# Image Processing Service Configuration

# Application settings
IMAGE_SERVICE_APP_NAME="Image Processing Service"
IMAGE_SERVICE_ENVIRONMENT="development"
IMAGE_SERVICE_DEBUG=true

# Server settings
IMAGE_SERVICE_HOST="0.0.0.0"
IMAGE_SERVICE_PORT=8000

# Image processing settings
IMAGE_SERVICE_MAX_IMAGE_SIZE=52428800  # 50MB in bytes
IMAGE_SERVICE_TEMP_DIR="/tmp/image_processing"

# Detection settings
IMAGE_SERVICE_FACE_DETECTION_CONFIDENCE=0.5
IMAGE_SERVICE_PERSON_DETECTION_CONFIDENCE=0.5

# Model paths
IMAGE_SERVICE_MODELS_DIR="./models"
IMAGE_SERVICE_FACE_CASCADE_PATH="./models/haarcascade_frontalface_default.xml"

# File storage settings
IMAGE_SERVICE_UPLOAD_DIR="../backend/uploads"
IMAGE_SERVICE_PROCESSED_DIR="../backend/processed"